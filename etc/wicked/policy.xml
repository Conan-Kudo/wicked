<policy type="event">
 <match>
  <event type="link-up">
   <interface type="ethernet">
    <status link="up" network="down"/>
    <mac address="00:11:22:33:44:55"/>
   </interface>
  </event>
 </match>
 <transformation action="put">
  <interface>
   <status network="up"/>
   <protocol family="ipv4">
    <dhcp/>
   </protocol>
  </interface>
 </transformation>
</policy>

<policy type="event">
 <match>
  <event type="link-create">
   <interface type="vlan">
    <status link="down" network="down"/>
   </interface>
  </event>
 </match>
 <transformation action="put">
  <interface>
   <status network="up"/>
   <protocol family="ipv4">
    <dhcp/>
   </protocol>
  </interface>
 </transformation>
</policy>

