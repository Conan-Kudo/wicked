<!--
  -- VLAN Service definition
  -->
<service name="vlan" interface="com.suse.Wicked.VLAN" object-class="netif-vlan">
 <!-- This is the linkinfo returned in interface reports -->
 <define name="linkinfo" class="dict">
  <device type="string">
    <meta:netif-reference shared="true"/>
    <meta:require op="deviceUp" check="netif-child-state" min-state="device-up" />
    <meta:require op="linkUp" check="netif-child-state" min-state="link-up" />
  </device>
  <tag type="uint16"/>
 </define>

 <!-- the properties of a VLAN device: -->
 <define name="properties" type="linkinfo"/>

 <method name="deleteDevice">
   <!-- no arguments, no return code -->
 </method>
</service>

<service name="vlan-factory" interface="com.suse.Wicked.VLAN.Factory" object-class="netif-list">
 <method name="newDevice">
  <meta:require check="netif-resolve" document-node="/vlan/device"/>
  <arguments>
   <name type="string"/>
   <config type="vlan:linkinfo">
    <meta:mapping document-node="/vlan"/>
   </config>
  </arguments>
  <return>
   <!-- this is really an object handle -->
   <string/>
  </return>
 </method>
</service>
