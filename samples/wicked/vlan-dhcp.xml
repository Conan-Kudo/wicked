<interface>
  <name>eth0.42</name>
  <description>VLAN 42</description>

  <vlan>
    <device>eth0</device>
    <tag>42</tag>
  </vlan>

  <ipv4:dhcp>
    <!-- request short lease timeout of 120 seconds -->
    <lease-time>120</lease-time>

    <!-- use a specific vendor-class -->
    <vendor-class>MyVendorClass</vendor-class>
  </ipv4:dhcp>
</interface>


