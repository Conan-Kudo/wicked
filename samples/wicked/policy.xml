<!--
     Default policy for any ethernet device.
  -->
<policy weight="0">
 <match>
   <link-type>ethernet</link-type>
 </match>

 <merge>
   <ipv4:dhcp>
     <enabled>true</enabled>

     <!-- if you need to set a specified client-id, or wish to request
          a different lease timeout, you can do this here. -->
   </ipv4:dhcp>
 </merge>
</policy>
