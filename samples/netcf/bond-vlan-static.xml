<interface type="bond" name="bond0">
  <start mode="onboot"/>
  <protocol family="ipv4">
    <ip address="192.168.50.7" prefix="24"/>
    <route gateway="192.168.50.1"/>
  </protocol>
  <bond mode="active-backup">
    <arpmon interval="100" validate="active">
     <target ip="192.168.50.1"/>
    </arpmon>
    <interface name="eth0.42"/>
    <interface name="eth0.43"/>
  </bond>
</interface>
<interface type="vlan" name="eth0.42">
  <start mode="none"/>
  <vlan tag="42">
    <interface name="eth0"/>
  </vlan>
</interface>
<interface type="vlan" name="eth0.43">
  <start mode="none"/>
  <vlan tag="43">
    <interface name="eth0"/>
  </vlan>
</interface>
