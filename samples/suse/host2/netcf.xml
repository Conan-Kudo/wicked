<interface type="bridge" name="br0">
  <start mode="onboot"/>
  <protocol family="ipv4">
    <dhcp/>
  </protocol>
  <bridge stp="off">
    <interface type="ethernet" name="eth0"/>
  </bridge>
</interface>
<interface type="loopback" name="lo">
  <start mode="onboot"/>
  <protocol family="ipv4">
    <ip address="127.0.0.1" prefix="32"/>
    <ip address="127.0.0.2" prefix="8"/>
    <route address="127.0.0.0" prefix="8"/>
  </protocol>
</interface>
